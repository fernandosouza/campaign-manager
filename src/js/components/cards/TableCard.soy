{namespace TableCard}

/**
 * @param headers
 * @param data
 * @param title
 */
{template .render}
	<div class="campaign-manager-table-card">
		{call Card.render}
			{param children kind="html"}
				<div>{$title}</div>
				<table class="table">
					<thead>
						<tr>
							{foreach $header in $headers}
								<th class="light-gray">{$header}</th>
							{/foreach}
						</tr>
					</thead>
					<tbody>
						{foreach $row in $data}
							<tr>
								{foreach $cell in $row}
									<td>{$cell}</td>
								{/foreach}
							</tr>
						{/foreach}
					</tbody>
				</table>
			{/param}
		{/call}
	</div>
{/template}
